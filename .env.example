# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# Pentru MySQL/MariaDB (cPanel)
DB_ENGINE=mysql
DB_NAME=lentiuro_registru
DB_USER=lentiuro_admin
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=3306

# Pentru SQLite (dezvoltare) - comentați DB_ENGINE sau setați la 'sqlite'
# DB_ENGINE=sqlite

# CORS și CSRF Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,http://your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://your-domain.com

# Media și Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
